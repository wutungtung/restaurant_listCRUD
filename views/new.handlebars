<div class="container form">
  <div class="form-outer">
    <div class="form-inner">
      <form action="/restaurants" method="post">
        <div class="container d-flex flex-column mt-3" style="width:400px">
          <div class="m-2">
            <label for="name" class="form-label">店名<span>:</span></label>
            <input
              class="form-control"
              type="text"
              name="name"
              placeholder="請輸入餐廳名"
              id="name"
            />
          </div>

          <div class="m-2">
            <label for="category" class="form-label">分類<span>:</span></label>
            <input
              class="form-control"
              type="text"
              name="category"
              placeholder="美式料理..."
              id="category"
            />
          </div>

          <div class="m-2">
            <label for="image" class="form-label">圖片連結<span>:</span></label>
            <input
              class="form-control"
              type="text"
              name="image"
              placeholder="請輸入圖片網址"
              id="image"
            />
          </div>

          <div class="m-2">
            <label for="location" class="form-label">地址<span>:</span></label>
            <input
              class="form-control"
              type="text"
              name="location"
              placeholder="請輸入餐廳地址"
              id="location"
            />
          </div>

          <div class="m-2">
            <label for="phone" class="form-label">電話<span>:</span></label>
            <input
              class="form-control"
              type="tel"
              name="phone"
              placeholder="02-XXXX-XXXX"
              id="phone"
            />
          </div>

          <div class="m-2 d-flex flex-column">
            <label for="google_map" class="form-label">Google地圖連結<span
              >:</span></label>
            <input
              class="form-control"
              type="text"
              name="google_map"
              placeholder="請輸入Google Map網址"
              id="google_map"
            />
          </div>

          <div class="m-2">
            <label for="rating" class="form-label">評分<span>:</span></label>
            <input
              class="form-control"
              type="number"
              name="rating"
              placeholder="0 - 5.0"
              id="rating"
              min="0"
              max="5"
              step="0.1"
            />
          </div>

          <div class="m-2">
            <label for="description" class="form-label">敘述<span
              >:</span></label>
            <textarea
              class="form-control"
              name="description"
              placeholder="請輸入餐廳特色"
              id="description"
              rows="2"
            >
            </textarea>
          </div>
          <div>
            <button class="btn btn-major mt-3" type="submit">新增</button>
            <a href="/" class="btn btn-major mt-3">取消</a>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>